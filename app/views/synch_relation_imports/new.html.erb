<% if @type == 'User' %>
	<h2><%= l(:"synch_time_entries.label_import_user_relation") %></h2>
<% elsif @type == 'Project' %>
	<h2><%= l(:"synch_time_entries.label_import_project_relation") %></h2>
<% end %>

<%= form_tag(synch_relation_imports_path, :multipart => true) do %>
  <fieldset class="box">
    <legend><%= l(:label_select_file_to_import) %> (CSV)</legend>
    <p>
      <%= file_field_tag 'file' %>
    </p>
    <p><%= hidden_field_tag 'type', @type %></p>
  </fieldset>
  <p><%= submit_tag l(:label_next).html_safe + " &#187;".html_safe, :name => nil %></p>
<% end %>
